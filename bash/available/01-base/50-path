append_to_path ()
{
    check_path $1
    if [ $? -ne 0 ]; then
        export PATH=$PATH:${1}
    fi
}

prepend_to_path ()
{
    check_path $1
    if [ $? -ne 0 ]; then
        export PATH=${1}:$PATH
    fi
}

check_path ()
{
    if [[ "$PATH" =~ (^|:)"${1}"(:|$) ]]
    then
        return 0
    fi
    return 1
}
prepend_to_path ~/bin
prepend_to_path ~/.nomad/scripts

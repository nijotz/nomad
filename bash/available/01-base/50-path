append_to_path ()
{
    remove_path $1
    export PATH=$PATH:${1}
}

prepend_to_path ()
{
    remove_path $1
    export PATH=${1}:$PATH
}

# Remove path if it is already added
# TODO: if the path exists as a portion of a larger path, this breaks
remove_path ()
{
    if [[ "$PATH" =~ (^|:)"${1}"(:|$) ]]
    then
        export PATH=$(echo $PATH | sed -e "s^${1}^^g" -e 's/::/:/g')
    fi
}
prepend_to_path ~/bin
prepend_to_path ~/.nomad/scripts
